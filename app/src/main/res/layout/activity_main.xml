<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartchart.cn.mpandroidchart.MainActivity">
    <com.github.mikephil.charting.view.LineChartInViewPager
        android:id="@+id/trend_lineChart"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </com.github.mikephil.charting.view.LineChartInViewPager>


    <Button
        android:layout_below="@+id/trend_lineChart"
        android:layout_width="match_parent"
        android:id="@+id/btn_update"
        android:text="更新数据"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/btn_update"
        android:layout_width="match_parent"
        android:id="@+id/btn_jump"
        android:text="普通Chart"
        android:layout_height="wrap_content" />
</RelativeLayout>
